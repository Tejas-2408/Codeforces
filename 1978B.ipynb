   "metadata": {},
   "outputs": [],
   "source": [
    "def sol():\n",
    "    n,a,b = map(int,input().split())\n",
    "    k = min(n,abs(b-a))\n",
    "    ans=0\n",
    "    if b<=a:\n",
    "        print(a*n)\n",
    "    else:\n",
    "        ans+= ((2*b-k+1)*k)/2 + ((n-k)*a)\n",
    "        print(math.floor(ans))"
   ]
  },
  {
